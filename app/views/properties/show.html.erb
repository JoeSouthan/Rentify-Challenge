<%= render 'sidebar' %>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <% if notice.present? %><p id="notice"><%= notice %></p><% end %>
  
  <h1><%= t("views.property.show.show_property") %></h1>
    
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><strong><%= @property.description %></strong></h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-2">
          <img src="data:image/svg+xml;base64," alt="Map" height="250" width="250" class="img-thumbnail">
        </div>
        <div class="col-md-10">
          <p>
            <strong><%= Property.human_attribute_name("description") %>:</strong>
            <%= @property.description %>
          </p>

          <p>
            <strong><%= Property.human_attribute_name("description") %>:</strong>
            <%= @property.postcode %>
          </p>

          <p>
            <strong><%= Property.human_attribute_name("current_rent") %>:</strong>
            <%= @property.current_rent.format %>
          </p>

          <p>
            <strong><%= Property.human_attribute_name("initial_cost") %>:</strong>
            <%= @property.initial_cost.format %>
          </p>

          <p>
            <strong><%= Property.human_attribute_name("email") %>:</strong>
            <%= @property.email %>
          </p>

          <p>
            <strong><%= Property.human_attribute_name("telephone") %>:</strong>
            <%= @property.telephone %>
          </p>  
        </div>
      </div>

    </div>
  </div>

  <%= link_to 'Edit', edit_property_path(@property), {class: "btn btn-primary btn-lg"} %> <%= link_to 'Back', properties_path, {class: "btn btn-primary btn-lg"} %>
</div>
